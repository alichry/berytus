{
  "author": "Ali Cherry",
  "name": "berytus",
  "type": "module",
  "scripts": {
    "prebuild": "npm run build:produce-ts-paths && npm run build:generate-requesthandler",
    "build": "rm -r ./modules/* && tsc",
    "postbuild": "npm run build:tailor-build",
    "build:tailor-build": "node --loader ts-node/esm ./build/modules/tailor-build.ts",
    "build:produce-ts-paths": "node --loader ts-node/esm ./build/paths/produce-ts-paths.ts",
    "build:generate-requesthandler": "node --loader ts-node/esm ./build/request-handler/generate.ts"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "ts-morph": "^23.0.0",
    "ts-node": "^10.9.2"
  }
}

+  if (NS_WARN_IF(!asSupports)) {
+    return NS_ERROR_FAILURE;
+  }
+  InternalRequest* req = mRequest.unsafeGetRawPtr();
+  obs->NotifyObservers(asSupports,
+                       NS_FETCH_DRIVER_HTTP_FETCH_TOPIC,
